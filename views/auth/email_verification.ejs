<section class="account-section overflow-hidden">
    <div class="account-wrapper auth--page login-wrapper">

        <div class="account-right">
            <div class="w-100">
                <div class="section-title text-center">
                    <a href="" class="logo">
                      <img src="/images/logo2.png" alt="logo">
                    </a>
                    <br>
                    <p><%= message %></p>
                </div>
                
                <form class="row g-4" action="<%= url %>" method="post" onsubmit="return recaptcha();">
                    <div class="col-sm-12 form-group">
                        <label class="form--label" for="otp">Enter OTP</label>
                        <div class="otp-input-wrapper">
                            <input type="text" name="otp1" maxlength="1" class="otp-input" required>
                            <input type="text" name="otp2" maxlength="1" class="otp-input" required>
                            <input type="text" name="otp3" maxlength="1" class="otp-input" required>
                            <input type="text" name="otp4" maxlength="1" class="otp-input" required>
                            <input type="text" name="otp5" maxlength="1" class="otp-input" required>
                            <input type="text" name="otp6" maxlength="1" class="otp-input" required>
                        </div>
                        <input type="hidden" name="otp" id="otp-full">
                    </div>

                    <div class="col-xl-12 form-group">
                        <button type="submit" class="cmn--btn"><%= buttonText %></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="fixed--anime">
    <span class="banner-elem elem1">&nbsp;</span>
    <span class="banner-elem elem2">&nbsp;</span>
    <span class="banner-elem elem3">&nbsp;</span>
    <span class="banner-elem elem4">&nbsp;</span>
    <span class="banner-elem elem5">&nbsp;</span>
    <span class="banner-elem elem6">&nbsp;</span>
    <span class="banner-elem elem7">&nbsp;</span>
    <span class="banner-elem elem8">&nbsp;</span>
    <span class="banner-elem elem9">&nbsp;</span>

</div>

<script>
    const otpInputs = document.querySelectorAll('.otp-input');
    const otpFullInput = document.getElementById('otp-full');

    otpInputs.forEach((input, index) => {
        input.addEventListener('input', () => {
            // Automatically move to the next input if filled
            if (input.value.length === 1 && index < otpInputs.length - 1) {
                otpInputs[index + 1].focus();
            }

            // Combine all the inputs into one hidden field
            let otp = '';
            otpInputs.forEach(otpInput => otp += otpInput.value);
            otpFullInput.value = otp;
        });

        // Allow moving backwards
        input.addEventListener('keydown', (e) => {
            if (e.key === "Backspace" && input.value === '' && index > 0) {
                otpInputs[index - 1].focus();
            }
        });
    });
</script>

<style>
    .otp-input-wrapper {
        display: flex;
        gap: 10px;
        justify-content: center;
    }
    .otp-input {
        width: 40px;
        height: 50px;
        font-size: 24px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>

