<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Licence Renewal Application</h4>
                <h6>Submit your licence renewal request</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form action="/dashboard/licenseRenewal" method="post">
                    <div class="row">
                        <!-- Licence Details -->
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Licence ID</label>
                                <input name="licenceID" type="text" class="form-control" placeholder="Enter Licence ID">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Business Name</label>
                                <input name="businessName" type="text" class="form-control" placeholder="Enter Business Name">
                            </div>
                        </div>

                        <!-- Contact Details -->
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Contact Person</label>
                                <input name="contactPerson" type="text" class="form-control" placeholder="Enter Contact Person's Name">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Email Address</label>
                                <input name="email" type="email" class="form-control" placeholder="Enter Email Address">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input name="phone" type="text" class="form-control" placeholder="Enter Phone Number">
                            </div>
                        </div>

                        <!-- Business Details -->
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label>Reason for Renewal</label>
                                <textarea name="reason" class="form-control" placeholder="Explain why you need the renewal"></textarea>
                            </div>
                        </div>

                        <!-- Supporting Documents -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Upload Supporting Documents</label>
                                <div class="image-upload">
                                    <input name="documents[]" type="file" multiple>
                                    <div class="image-uploads">
                                        <img src="/assets/img/icons/upload.svg" alt="img">
                                        <h4>Drag and drop files to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary">Submit Renewal</button>
                            <button type="reset" class="btn btn-secondary">Clear Form</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
