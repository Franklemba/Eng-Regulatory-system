<div class="page-wrapper my-5">
    <div class="card shadow-lg rounded">
        <div class="card-header">
            <h2 class="text-center mb-0">Premise Leasing</h2>
        </div>
        <div class="card-body">
            <form action="/dashboard/newPremiseLeasing" method="POST" enctype="multipart/form-data">
                <!-- Section 1: Application Details -->
                <h4 class="mb-3 border-bottom pb-2">1. Application Details</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="applicationType" class="form-label">Application Type</label>
                        <select id="applicationType" name="applicationType" class="form-select" required>
                            <option value="" selected disabled>Select Application Type</option>
                            <option value="Office Leasing">Office Leasing</option>
                            <option value="Project Location">Project Location</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="applicantName" class="form-label">Applicantâ€™s Full Name</label>
                        <input type="text" id="applicantName" name="applicantName" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="organizationName" class="form-label">Organization/Company Name</label>
                        <input type="text" id="organizationName" name="organizationName" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="zepraClientId" class="form-label">ZEPRA Client ID</label>
                        <input type="text" id="zepraClientId" name="zepraClientId" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="emailAddress" class="form-label">Email Address</label>
                        <input type="email" id="emailAddress" name="emailAddress" class="form-control" required>
                    </div>
                </div>

                <!-- Section 2: Premises Information -->
                <h4 class="mt-4 mb-3 border-bottom pb-2">2. Premises Information</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="premisesType" class="form-label">Premises Type</label>
                        <select id="premisesType" name="premisesType" class="form-select" required>
                            <option value="" selected disabled>Select Premises Type</option>
                            <option value="Office">Office</option>
                            <option value="Project Site">Project Site</option>
                            <option value="Storage/Facilities">Storage/Facilities</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="provinceCity" class="form-label">Province/City</label>
                        <input type="text" id="provinceCity" name="provinceCity" class="form-control" required>
                    </div>
                    <div class="col-12">
                        <label for="physicalAddress" class="form-label">Physical Address</label>
                        <textarea id="physicalAddress" name="physicalAddress" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="col-md-6">
                        <label for="gpsCoordinates" class="form-label">GPS Coordinates</label>
                        <input type="text" id="gpsCoordinates" name="gpsCoordinates" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="landlordName" class="form-label">Landlord Name</label>
                        <input type="text" id="landlordName" name="landlordName" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="landlordContact" class="form-label">Landlord Contact</label>
                        <input type="text" id="landlordContact" name="landlordContact" class="form-control">
                    </div>
                </div>

                <!-- Section 3: Lease Details -->
                <h4 class="mt-4 mb-3 border-bottom pb-2">3. Lease Details</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="leaseStartDate" class="form-label">Lease Start Date</label>
                        <input type="date" id="leaseStartDate" name="leaseStartDate" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="leaseEndDate" class="form-label">Lease End Date</label>
                        <input type="date" id="leaseEndDate" name="leaseEndDate" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="monthlyRent" class="form-label">Monthly Rent</label>
                        <input type="number" id="monthlyRent" name="monthlyRent" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="totalLeaseValue" class="form-label">Total Lease Value</label>
                        <input type="number" id="totalLeaseValue" name="totalLeaseValue" class="form-control" required>
                    </div>
                    <div class="col-12">
                        <label for="leaseAgreement" class="form-label">Lease Agreement</label>
                        <input type="file" id="leaseAgreement" name="leaseAgreement" class="form-control" required>
                    </div>
                </div>

                <!-- Section 4: Supporting Documents -->
                <h4 class="mt-4 mb-3 border-bottom pb-2">4. Supporting Documents</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="zoningApproval" class="form-label">Zoning Approval</label>
                        <input type="file" id="zoningApproval" name="zoningApproval" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="environmentalClearance" class="form-label">Environmental Clearance</label>
                        <input type="file" id="environmentalClearance" name="environmentalClearance" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="buildingSafetyCert" class="form-label">Building Safety Certificate</label>
                        <input type="file" id="buildingSafetyCert" name="buildingSafetyCert" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="otherDocs" class="form-label">Other Documents</label>
                        <input type="file" id="otherDocs" name="otherDocs" class="form-control" multiple>
                    </div>
                </div>

                <!-- Section 5: Declaration -->
                <h4 class="mt-4 mb-3 border-bottom pb-2">5. Declaration</h4>
                <div class="form-check">
                    <input type="checkbox" id="declaration" name="declaration" class="form-check-input" required>
                    <label for="declaration" class="form-check-label">
                        I hereby declare that the information provided is accurate and complete to the best of my knowledge.
                    </label>
                </div>

                <!-- Section 6: Authorized Person -->
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <label for="authorizedPersonName" class="form-label">Authorized Person Name</label>
                        <input type="text" id="authorizedPersonName" name="authorizedPersonName" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="submissionDate" class="form-label">Submission Date</label>
                        <input type="date" id="submissionDate" name="submissionDate" class="form-control" required>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary px-4">Submit Application</button>
                </div>
            </form>
        </div>
    </div>
</div>
