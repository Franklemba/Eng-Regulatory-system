<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Awareness Advert</h4>
                <h6>Create, manage, and track public awareness campaigns</h6>
            </div>
        </div>

        <%- include(`../../partials/notification`) %>

        <!-- Awareness Advert Form -->
        <div class="card">
            <div class="card-body">
                <h5>Create a New Awareness Advert</h5>
                <form method="post" action="/dashboard/newAwarenessAdvert" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="advert-id">Advert ID</label>
                                <input type="text" id="advert-id" class="form-control" placeholder="Auto-generated ID" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="advert-title">Advert Title</label>
                                <input type="text" id="advert-title" name="advertTitle" class="form-control" placeholder="Enter the title of the advert">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="advert-description">Description</label>
                        <textarea id="advert-description" name="description" class="form-control" rows="5" placeholder="Provide a detailed description of the advert"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="start-date">Start Date</label>
                                <input type="date" id="start-date" name="startDate" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="end-date">End Date</label>
                                <input type="date" id="end-date" name="endDate" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="target-audience">Target Audience</label>
                        <textarea id="target-audience" name="targetAudience" class="form-control" rows="3" placeholder="Specify the target audience"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="advert-files">Upload Advert Media</label>
                        <input type="file" id="advert-files" name="advertMedia" class="form-control" multiple>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Advert</button>
                </form>
            </div>
        </div>

        <!-- Existing Adverts Section -->
        <div class="card">
            <div class="card-body">
                <h5>Track Submitted Adverts</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Advert ID</th>
                            <th>Title</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Advert Row -->
                         <% if (awarenessAdvert[0] == null) { %>

                            
                                <h3>No adverts available yet</h3>
                            

                            <% } else  { %>
                             
                                <% awarenessAdvert.forEach(element => { %>
                                   <tr>
                                       <td><%=element._id %></td>
                                       <td><%=element.advertTitle %></td>
                                       <td><%=element.startDate.toLocaleDateString('en-GB') %></td>
                                       <td><%=element.endDate.toLocaleDateString('en-GB') %></td>
                                       <td><span class="badge badge-warning"><%=element.status %></span></td>
                                       <td>
                                           <button class="btn btn-info btn-sm"><a href="/<%=element.advertMedia%>">view</a></button>
                                           <button class="btn btn-danger btn-sm">Cancel</button>
                                       </td>
                                   </tr>
                                 
                                <% }) %>
                          
                         <% } %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
