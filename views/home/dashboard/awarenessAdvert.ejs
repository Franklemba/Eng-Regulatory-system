<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Awareness Advert</h4>
                <h6>Create, manage, and track public awareness campaigns</h6>
            </div>
        </div>

        <!-- Awareness Advert Form -->
        <div class="card">
            <div class="card-body">
                <h5>Create a New Awareness Advert</h5>
                <form>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="advert-id">Advert ID</label>
                                <input type="text" id="advert-id" class="form-control" placeholder="Auto-generated ID" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="advert-title">Advert Title</label>
                                <input type="text" id="advert-title" class="form-control" placeholder="Enter the title of the advert">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="advert-description">Description</label>
                        <textarea id="advert-description" class="form-control" rows="5" placeholder="Provide a detailed description of the advert"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="start-date">Start Date</label>
                                <input type="date" id="start-date" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="end-date">End Date</label>
                                <input type="date" id="end-date" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="target-audience">Target Audience</label>
                        <textarea id="target-audience" class="form-control" rows="3" placeholder="Specify the target audience"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="advert-files">Upload Advert Media</label>
                        <input type="file" id="advert-files" class="form-control" multiple>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Advert</button>
                </form>
            </div>
        </div>

        <!-- Existing Adverts Section -->
        <div class="card">
            <div class="card-body">
                <h5>Track Submitted Adverts</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Advert ID</th>
                            <th>Title</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Advert Row -->
                        <tr>
                            <td>ADV12345</td>
                            <td>Health Awareness Campaign</td>
                            <td>2024-12-01</td>
                            <td>2024-12-31</td>
                            <td><span class="badge badge-warning">Pending</span></td>
                            <td>
                                <button class="btn btn-info btn-sm">View</button>
                                <button class="btn btn-danger btn-sm">Cancel</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
