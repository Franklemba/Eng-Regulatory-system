<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Review Progress</h4>
                <h6>Track and manage the progress of all applications</h6>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="mb-3">Filter Applications</h5>
                <form id="filter-form">
                    <div class="row">
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Application Type</label>
                                <select class="form-control select">
                                    <option>All Types</option>
                                    <option>Engineering Permit</option>
                                    <option>Business License</option>
                                    <option>Construction Approval</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control select">
                                    <option>All Statuses</option>
                                    <option>Pending</option>
                                    <option>Approved</option>
                                    <option>Rejected</option>
                                    <option>In Progress</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Date Range</label>
                                <input type="date" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-12 text-end">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Applications List -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Application Progress</h5>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Application ID</th>
                                <th>Type</th>
                                <th>Applicant</th>
                                <th>Status</th>
                                <th>Progress</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Example Row -->
                            <tr>
                                <td>#12345</td>
                                <td>Engineering Permit</td>
                                <td>John Doe</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success" style="width: 40%;"></div>
                                    </div>
                                    <small>40% Complete</small>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#">View Details</a></li>
                                            <li><a class="dropdown-item" href="#">Send Reminder</a></li>
                                            <li><a class="dropdown-item" href="#">Approve</a></li>
                                            <li><a class="dropdown-item" href="#">Reject</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            <!-- Add more rows as needed -->
                            <tr>
                                <td>#12346</td>
                                <td>Business License</td>
                                <td>Jane Smith</td>
                                <td><span class="badge bg-success">Approved</span></td>
                                <td>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success" style="width: 100%;"></div>
                                    </div>
                                    <small>100% Complete</small>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="#">View Details</a></li>
                                            <li><a class="dropdown-item" href="#">Archive</a></li>
                                            <li><a class="dropdown-item" href="#">Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Detailed Application View (Expandable Section) -->
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="mb-3">Detailed View</h5>
                <div class="accordion" id="application-details">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Application #12345 - Engineering Permit
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#application-details">
                            <div class="accordion-body">
                                <p><strong>Applicant:</strong> John Doe</p>
                                <p><strong>Type:</strong> Engineering Permit</p>
                                <p><strong>Status:</strong> Pending</p>
                                <p><strong>Progress:</strong> 40%</p>
                                <p><strong>Details:</strong> Application under review by engineering department. Pending safety compliance documentation.</p>
                                <button class="btn btn-success mt-2">Approve</button>
                                <button class="btn btn-danger mt-2">Reject</button>
                                <button class="btn btn-warning mt-2">Request Additional Information</button>
                            </div>
                        </div>
                    </div>
                    <!-- Additional applications can be added here -->
                </div>
            </div>
        </div>
    </div>
</div>
