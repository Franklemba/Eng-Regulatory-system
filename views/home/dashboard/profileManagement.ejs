<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Profile Management</h4>
                <h6>Manage and update your profile information</h6>
            </div>
        </div>

        <!-- Profile Overview Section -->
        <div class="card">
            <div class="card-body">
                <h5>Account Overview</h5>
                <div class="row">
                    <div class="col-lg-3 text-center">
                        <img src="profile-placeholder.png" alt="Profile Picture" class="img-thumbnail rounded-circle mb-3" style="width: 150px; height: 150px;">
                        <button class="btn btn-secondary btn-sm">Change Profile Picture</button>
                    </div>
                    <div class="col-lg-9">
                        <table class="table table-borderless">
                            <tr>
                                <th>Full Name:</th>
                                <td>John Doe</td>
                            </tr>
                            <tr>
                                <th>Email Address:</th>
                                <td>johndoe@example.com</td>
                            </tr>
                            <tr>
                                <th>Phone Number:</th>
                                <td>+123 456 7890</td>
                            </tr>
                            <tr>
                                <th>Account Type:</th>
                                <td>Corporate</td>
                            </tr>
                            <tr>
                                <th>Registration Date:</th>
                                <td>2021-05-15</td>
                            </tr>
                        </table>
                        <button class="btn btn-primary btn-sm mt-3" id="edit-profile-toggle">Edit Details</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Profile Section -->
        <div class="card mt-4" id="edit-profile-section" style="display: none;">
            <div class="card-body">
                <h5>Edit Profile Details</h5>
                <form>
                    <div class="row">
                        <!-- Personal Information -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Full Name</label>
                                <input type="text" class="form-control" placeholder="Enter full name" value="John Doe">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Email Address</label>
                                <input type="email" class="form-control" placeholder="Enter email address" value="johndoe@example.com">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" class="form-control" placeholder="Enter phone number" value="+123 456 7890">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Date of Birth</label>
                                <input type="date" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Nationality</label>
                                <select class="form-control">
                                    <option>Select nationality</option>
                                    <option>Zambian</option>
                                    <option>Indian</option>
                                    <option>American</option>
                                </select>
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Organization Name</label>
                                <input type="text" class="form-control" placeholder="Enter organization name">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Position</label>
                                <input type="text" class="form-control" placeholder="Enter position in organization">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Industry</label>
                                <select class="form-control">
                                    <option>Select industry</option>
                                    <option>Construction</option>
                                    <option>Manufacturing</option>
                                    <option>IT</option>
                                </select>
                            </div>
                        </div>

                        <!-- Address Details -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" placeholder="Enter address">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>City</label>
                                <input type="text" class="form-control" placeholder="Enter city">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Country</label>
                                <select class="form-control">
                                    <option>Select country</option>
                                    <option>Zambia</option>
                                    <option>India</option>
                                    <option>USA</option>
                                </select>
                            </div>
                        </div>

                        <!-- Security Details -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="password" class="form-control" placeholder="Enter new password">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" class="form-control" placeholder="Confirm new password">
                            </div>
                        </div>

                        <!-- Supporting Documents -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Upload Supporting Documents</label>
                                <input type="file" class="form-control">
                                <small class="form-text text-muted">Upload ID proof, certifications, or other relevant documents.</small>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Save Changes</button>
                    <button type="button" class="btn btn-secondary mt-3" id="cancel-edit-button">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Toggle Edit Profile Section
    document.getElementById('edit-profile-toggle').addEventListener('click', () => {
        document.getElementById('edit-profile-section').style.display = 'block';
    });

    document.getElementById('cancel-edit-button').addEventListener('click', () => {
        document.getElementById('edit-profile-section').style.display = 'none';
    });
</script>
