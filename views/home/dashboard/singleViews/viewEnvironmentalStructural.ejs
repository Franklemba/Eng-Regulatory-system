<div class="page-wrapper">
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h4 class="mb-0">Structural License Details</h4>
            </div>
            <div class="card-body">
                <!-- Project Details -->
                <h5 class="text-muted mb-3">Project Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Project Name:</strong> <%= environmentalStructural.projectName %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Project ID:</strong> <%= environmentalStructural.projectID %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Structure Type:</strong> <%= environmentalStructural.structureType %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>EIA Required:</strong> <%= environmentalStructural.isEIArequired === "Yes" ? "Yes" : "No" %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Submitted On:</strong> <%= new Date(environmentalStructural.createdAt).toLocaleString() %></p>
                    </div>
                </div>
    
                <!-- Safety and Environmental Details -->
                <h5 class="text-muted mb-3">Safety and Environmental Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Safety Standards:</strong> <%= environmentalStructural.structuralSafetyStandards %></p>
                    </div>
                  
                    <% if (environmentalStructural.structuralIntegrityEvaluationReport) { %>
                     
                        <div class="col-md-6">
                            <p><strong>Integrity Evaluation Report:</strong>
                                 <a href="<%=environmentalStructural.structuralIntegrityEvaluationReport %>" 
                                    class="btn btn-sm btn-primary" 
                                    download="<%= environmentalStructural.structuralIntegrityEvaluationReport %>">
                                    Download Report
                                </a>
                                </p>
                        </div>
                        <% } else { %>
                            <div class="col-md-6">
                                <form method="POST" action="/dashboard/uploadEnvStructuralDoc/structuralIntegrityEvaluationReport" enctype="multipart/form-data">
                                    <label for="structuralIntegrityEvaluationReport" class="btn btn-rounded btn-outline-danger">
                                        Upload Integrity Evaluation Report
                                    </label>
                                    <input type="hidden" name="userId" value="<%= environmentalStructural._id %>">
                                    <input type="file" id="structuralIntegrityEvaluationReport" name="uploadSingleDoc" style="display: none;" onchange="this.form.submit()">
                                </form>

                            </div>

                    <% } %>
                    <% if (environmentalStructural.environmentImpactMitigationPlan) { %>
                     
                        <div class="col-md-6">
                            <p><strong>Impact Mitigation Plan:</strong> 
                                <a href="<%=environmentalStructural.environmentImpactMitigationPlan %>" 
                                    class="btn btn-sm btn-primary" 
                                    download="<%= environmentalStructural.environmentImpactMitigationPlan %>">
                                    Download Plan
                                </a>
                            </p>
                        </div>
                        <% } else { %>
                            <div class="col-md-6">
                                <form method="POST" action="/dashboard/uploadEnvStructuralDoc/environmentImpactMitigationPlan" enctype="multipart/form-data">
                                    <label for="environmentImpactMitigationPlan" class="btn btn-rounded btn-outline-danger">
                                        Upload Impact Mitigation Plan
                                    </label>
                                    <input type="hidden" name="userId" value="<%= environmentalStructural._id %>">
                                    <input type="file" id="environmentImpactMitigationPlan" name="uploadSingleDoc" style="display: none;" onchange="this.form.submit()">
                                </form>

                            </div>

                    <% } %>
                    <div class="col-md-6">
                        <p><strong>Emergency Response Plan:</strong>
                             <%= environmentalStructural.emergencyResponsePlan %>
                            </p>
                    </div>
                </div>
    
                <!-- Environmental Impact Details -->
                <h5 class="text-muted mb-3">Environmental Impact Details</h5>
                <div class="row mb-3">
                    <div class="col-12">
                        <p><strong>Local Ecosystem Impact Description:</strong></p>
                        <p><%= environmentalStructural.localEcosystemImpactDescription %></p>
                    </div>
                    <div class="col-12">
                        <p><strong>Environmental Assessment Details:</strong></p>
                        <p><%= environmentalStructural.environmentalAssessDetails %></p>
                    </div>
                </div>
    
                <!-- Uploaded Documents -->
                <h5 class="text-muted mb-3">Uploaded Documents</h5>
               

                <% if (environmentalStructural.supportingDocument) { %>
                     
                    <div class="row">
                        <div class="col-12">
                            <p><strong>Supporting Document:</strong></p>
                            <a href="<%=environmentalStructural.supportingDocument %>" 
                                class="btn btn-sm btn-primary" 
                                download="<%= environmentalStructural.supportingDocument %>">
                                Download Supporting Document
                            </a>
                        </div>
                    </div>
                    <% } else { %>
                        <div class="col-12">
                            <form method="POST" action="/dashboard/uploadEnvStructuralDoc/supportingDocument" enctype="multipart/form-data">
                                <label for="supportingDocument" class="btn btn-rounded btn-outline-danger">
                                    Upload Supporting Document
                                </label>
                                <input type="hidden" name="userId" value="<%= environmentalStructural._id %>">
                                <input type="file" id="supportingDocument" name="uploadSingleDoc" style="display: none;" onchange="this.form.submit()">
                            </form>

                        </div>

                <% } %>
            </div>
            <div class="card-footer text-end">
                <a href="/dashboard/structuralEnvironmentalLicenses" class="btn btn-secondary">Back to Licenses</a>
            </div>
        </div>
    </div>
</div>
