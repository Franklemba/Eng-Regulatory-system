<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Engineering Permit Application</h4>
                <h6>Submit a new permit application with detailed technical data</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form id="permit-application-form">
                    <!-- Applicant Information Section -->
                    <h5 class="mb-4">Applicant Information</h5>
                    <div class="row">
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Applicant Name</label>
                                <input type="text" class="form-control" placeholder="Enter your full name" required>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Company Name</label>
                                <input type="text" class="form-control" placeholder="Enter your company name" required>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Enter your email" required>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" placeholder="Enter your phone number" required>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Company Address</label>
                                <input type="text" class="form-control" placeholder="Enter company address">
                            </div>
                        </div>
                    </div>

                    <!-- Project Details Section -->
                    <h5 class="mb-4">Project Details</h5>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Project Title</label>
                                <input type="text" class="form-control" placeholder="Enter project title" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Project Location</label>
                                <input type="text" class="form-control" placeholder="Enter project location" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Estimated Project Cost (USD)</label>
                                <input type="number" class="form-control" placeholder="Enter estimated cost">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Expected Start Date</label>
                                <input type="date" class="form-control">
                            </div>
                        </div>
                    </div>

                    <!-- Permit Specifications Section -->
                    <h5 class="mb-4">Permit Specifications</h5>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Structure Type</label>
                                <select class="form-control select">
                                    <option>Select Structure Type</option>
                                    <option>Building</option>
                                    <option>Bridge</option>
                                    <option>Road</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Material Used</label>
                                <input type="text" class="form-control" placeholder="e.g., Concrete, Steel, etc.">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Total Area (sq. ft)</label>
                                <input type="number" class="form-control" placeholder="Enter total area">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Height (meters)</label>
                                <input type="number" class="form-control" placeholder="Enter height">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Weight Capacity (tons)</label>
                                <input type="number" class="form-control" placeholder="Enter weight capacity">
                            </div>
                        </div>
                    </div>

                    <!-- Supporting Documents Section -->
                    <h5 class="mb-4">Supporting Documents</h5>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Blueprints</label>
                                <input type="file" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Safety Certification</label>
                                <input type="file" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Environmental Clearance</label>
                                <input type="file" class="form-control">
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-lg-12 text-end">
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
