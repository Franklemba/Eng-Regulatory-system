<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>New Engineering License</h4>
                <h6>Fill out the form to apply for an engineering license</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form method="post" action="/dashboard/newApplication" enctype="multipart/form-data">
                    <div class="row">
                        <!-- Applicant Details -->
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="applicant-name">Applicant Name</label>
                                <input type="text" id="applicant-name" name="applicantName" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="tel" id="phone" name="phone" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="country">Choose Country</label>
                                <select id="country" name="country" class="form-control select" required>
                                    <option value="">Choose Country</option>
                                    <option value="Zambia">Zambia</option>
                                    <option value="India">India</option>
                                    <option value="USA">USA</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="city">City</label>
                                <input id="city" name="city" type="text" class="form-control" placeholder="Enter city">
                            </div>
                        </div>
                        <div class="col-lg-9 col-12">
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" id="address" name="address" class="form-control" required>
                            </div>
                        </div>
                        <!-- Company Details -->
                        <div class="col-lg-6 col-12">
                            <div class="form-group">
                                <label for="company-name">Company Name</label>
                                <input type="text" id="company-name" name="companyName" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="form-group">
                                <label for="registration-number">Company Registration Number</label>
                                <input type="text" id="registration-number" name="registrationNumber" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="form-group">
                                <label for="engineering-fields">Engineering Fields</label>
                                <input type="text" id="engineering-fields" name="engineeringFields" class="form-control" placeholder="e.g., Civil, Mechanical" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="form-group">
                                <label for="license-type">License Type</label>
                                <select id="license-type" name="licenseType" class="form-control select" required>
                                    <option value="">Select License Type</option>
                                    <option value="Professional">Professional</option>
                                    <option value="Industrial">Industrial</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="form-group">
                                <label for="engineering-org">Engineering organisation</label>
                                <select id="engineering-org" name="engineeringOrg" class="form-control select" required>
                                    <option value="">Select engineering organisation</option>
                                    <option value="C1">Engineering Org C1</option>
                                    <option value="C2">Engineering Org C2</option>
                                    <option value="C3">Engineering Org C3</option>
                                    <option value="A1">Engineering Org A1</option>
                                    <option value="A2">Engineering Org A2</option>
                                    <option value="A3">Engineering Org A3</option>
                                    <option value="B1">Engineering Org B1</option>
                                    <option value="B2">Engineering Org B2</option>
                                    <option value="B3">Engineering Org B3</option>
                                    <option value="D1">Engineering Org D1</option>
                                    <option value="D2">Engineering Org D2</option>
                                    <option value="D3">Engineering Org D3</option>
                                    
                                </select>
                            </div>
                        </div>
                        <!-- Supporting Documents -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="documents">Upload Supporting Documents</label>
                                <div class="image-upload">
                                    <input type="file" id="documents" name="documents" class="form-control" multiple required>
                                    <div class="image-uploads">
                                        <img src="/assets/img/icons/upload.svg" alt="upload icon">
                                        <h4>Drag and drop files to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Additional Information -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="description">Additional Details</label>
                                <textarea id="description" name="description" class="form-control" rows="5" placeholder="Provide any additional information"></textarea>
                            </div>
                        </div>
                        <!-- Submit and Cancel Buttons -->
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-submit me-2">Submit</button>
                            <button type="reset" class="btn btn-cancel">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
