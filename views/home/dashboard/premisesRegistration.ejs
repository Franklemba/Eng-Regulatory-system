<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Premises Registration</h4>
                <h6>Register a new premise</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form id="premises-registration-form">
                    <h5 class="mb-4">Premise Details</h5>
                    <div class="row">
                        <!-- Premise Name -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Premise Name</label>
                                <input type="text" class="form-control" placeholder="Enter premise name" required>
                            </div>
                        </div>

                        <!-- Premise Type -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Premise Type</label>
                                <select class="form-control select" required>
                                    <option>Office</option>
                                    <option>Factory</option>
                                    <option>Warehouse</option>
                                    <option>Laboratory</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- Area Size -->
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Area Size (in sq. meters)</label>
                                <input type="number" class="form-control" placeholder="Enter area size" required>
                            </div>
                        </div>

                        <!-- Construction Year -->
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Construction Year</label>
                                <input type="number" class="form-control" placeholder="Enter year of construction" required>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control select">
                                    <option>Operational</option>
                                    <option>Under Maintenance</option>
                                    <option>Closed</option>
                                </select>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" placeholder="Enter address" required>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5 class="mb-4">Premise Features</h5>
                    <div class="row">
                        <!-- Parking -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Parking Availability</label>
                                <select class="form-control select">
                                    <option>Yes</option>
                                    <option>No</option>
                                </select>
                            </div>
                        </div>

                        <!-- Electricity Supply -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Electricity Supply</label>
                                <select class="form-control select">
                                    <option>24/7</option>
                                    <option>Intermittent</option>
                                </select>
                            </div>
                        </div>

                        <!-- Water Supply -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Water Supply</label>
                                <select class="form-control select">
                                    <option>24/7</option>
                                    <option>Intermittent</option>
                                </select>
                            </div>
                        </div>

                        <!-- Accessibility -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Accessibility</label>
                                <select class="form-control select">
                                    <option>High</option>
                                    <option>Moderate</option>
                                    <option>Low</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5 class="mb-4">Supporting Documents</h5>
                    <div class="form-group">
                        <label>Upload Documents</label>
                        <div class="image-upload">
                            <input type="file" multiple>
                            <div class="image-uploads">
                                <img src="/assets/img/icons/upload.svg" alt="img">
                                <h4>Drag and drop files to upload</h4>
                            </div>
                        </div>
                        <small class="text-muted">Upload ownership certificates, blueprints, or other relevant documents.</small>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">Register Premise</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
