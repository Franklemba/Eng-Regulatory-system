<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Structural Licenses</h4>
                <h6>View and track the details of submitted structural licenses</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <!-- Filter Section -->
                <div class="row">
                    <!-- Placeholder for future filters -->
                </div>

                <!-- Licenses Table -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Project ID</th>
                                <th>EIA Required</th>
                                <th>Structure Type</th>
                                <th>Submission Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="licenses-table-body">
                            <% structuralLicenses.forEach((licence) => { %>
                                <tr>
                                    <td><%= licence.projectName %></td>
                                    <td><%= licence.projectID %></td>
                                    <td>
                                        <% if (licence.isEIArequired === "Yes") { %>
                                            <span class="badge bg-success">Yes</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">No</span>
                                        <% } %>
                                    </td>
                                    <td><%= licence.structureType %></td>
                                    <td><%= new Date(licence.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                Action
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="/singlePage/viewEnvironmentalStructural/<%= licence._id %>">View Details</a>
                                                </li>
                                              
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="row">
                    <!-- Placeholder for pagination -->
                </div>
            </div>
        </div>
    </div>
</div>
