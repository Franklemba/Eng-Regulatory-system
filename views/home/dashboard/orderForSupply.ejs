<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Order for Supply</h4>
                <h6>Create, track, and manage supply orders</h6>
            </div>
        </div>

        
        <%- include(`../../partials/notification`) %>

        <!-- Order Creation Form -->
        <div class="card">
            <div class="card-body">
                <h5>Create a New Order</h5>
                <form method="post" action="/dashboard/orderForSupply" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="order-id">Order ID</label>
                                <input type="text" id="order-id" class="form-control" placeholder="Auto-generated ID" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="supplier-name">Supplier Name</label>
                                <input type="text" id="supplier-name" name="supplierName" class="form-control" placeholder="Enter Supplier Name" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="contact-person">Contact Person</label>
                                <input type="text" id="contact-person" name="contactPerson" class="form-control" placeholder="Enter Contact Name" required >
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="contact-number">Contact Number</label>
                                <input type="text" id="contact-number" name="contactNumber" class="form-control" placeholder="Enter Phone Number" required >
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="supply-date">Expected Delivery Date</label>
                                <input type="date" id="supply-date" name="expectedDeliveryDate" class="form-control" required >
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="priority">Priority Level</label>
                                <select id="priority" name="priotyLevel" class="form-control" required >
                                    <option value="low">Low</option>
                                    <option value="medium">Medium</option>
                                    <option value="high">High</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="order-details">Order Details</label>
                        <textarea id="order-details" class="form-control" name="orderDetails" rows="5"   placeholder="List items, quantity, and any specific requirements" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="attachments">Upload Supporting Documents</label>
                        <input type="file" id="attachments" name="supportingDocument" class="form-control" multiple required >
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Order</button>
                </form>
            </div>
        </div>

        <!-- Existing Orders Section -->
        <div class="card">
            <div class="card-body">
                <h5>Track Existing Orders</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Supplier Name</th>
                            <th>Date</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Order Row -->
                         <% orderSupplies.forEach(element => { %>
                            <tr>
                                <td><%=element._id %></td>
                                <td><%=element.supplierName %></td>
                                <td><%=element.expectedDeliveryDate.toLocaleDateString('en-GB') %></td>
                                <td><%=element.priotyLevel %></td>
                                <td><span class="badge badge-warning"><%=element.status %></span></td>
                                <td>
                                    <button class="btn btn-info btn-sm">View</button>
                                    <button class="btn btn-danger btn-sm">Cancel</button>
                                </td>
                            </tr>
                          
                         <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
