<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Application Statuses</h4>
                <h6>View and track the status of submitted applications</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <!-- Filter Section -->
                <div class="row">
                    <!-- Filters can stay as is -->
                </div>

                <!-- Applications Table -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Application ID</th>
                                <th>Applicant Name</th>
                                <th>Email</th>
                                <th>License Type</th>
                                <th>Submission Date</th>
                                <th>Status</th>
                                <th>Documents</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="applications-table-body">
                            <% submittedApplications.forEach((application) => { %>
                                <tr>
                                    <td><%= application._id %></td>
                                    <td><%= application.applicantName %></td>
                                    <td><%= application.email %></td>
                                    <td><%= application.licenseType %></td>
                                    <td><%= new Date(application.submissionDate).toLocaleDateString() %></td>
                                    <td>
                                        <% if (application.status === "Pending") { %>
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        <% } else if (application.status === "Approved") { %>
                                            <span class="badge bg-success">Approved</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Rejected</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% application.documents.forEach((doc, index) => { %>
                                            <a href="/dashboard/download/<%= doc.url %>" 
                                                class="btn btn-sm btn-primary" 
                                                download="<%=doc.url %>">
                                                Download Doc <%= index + 1 %>
                                            </a>
                                        <% }); %>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                Action
                                            </button>
                                            <ul class="dropdown-menu">
                
                                                <li><a class="dropdown-item" href="/dashboard/deleteLicense/<%= application._id %>">Delete Application</a></li>
                                                
                                            </ul>
                                        </div>
                                    
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

