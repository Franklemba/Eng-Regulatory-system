<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Projects Listing</h4>
                <h6>Manage and add large-scale projects</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form id="project-form" method="post" action="/dashboard/newProject" enctype="multipart/form-data">
                    <h5 class="mb-4">Project Details</h5>
                    <div class="row">
                        <!-- Project Title -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Project Title</label>
                                <input type="text" name="title" class="form-control" placeholder="Enter project title" required>
                            </div>
                        </div>

                        <!-- Project Type -->
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Project Type</label>
                                <select name="projectType" class="form-control select" required>
                                    <option>Infrastructure</option>
                                    <option>Energy</option>
                                    <option>Transportation</option>
                                    <option>Water and Sanitation</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- Project Value -->
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Project Value (USD)</label>
                                <input type="number" name="projectValue" class="form-control" placeholder="Enter project value" required>
                            </div>
                        </div>

                        <!-- Project Duration -->
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Duration (Months)</label>
                                <input type="number" name="duration" class="form-control" placeholder="Enter duration" required>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control select">
                                    <option>Planned</option>
                                    <option>In Progress</option>
                                    <option>Completed</option>
                                    <option>On Hold</option>
                                </select>
                            </div>
                        </div>

                         <!-- Status -->
                         <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Scope</label>
                                <em>if public, then upload a notice of award document.</em>
                                <select name="projectScope" class="form-control select">
                                    <option>Public</option>
                                    <option>Private</option>
                                </select>
                            </div>
                        </div>
                        <hr>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6><strong>Notice of award document:</strong></h6>
                                <p>Only upload if project scope is public</p>
                                <input name="noticeOfAwardDoc" type="file" class="form-control" >
                            </div>
                        </div>

                        <!-- Project Description with Objectives -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Project Description with Objectives</label>
                                <textarea name="objectives" class="form-control" rows="3" placeholder="Describe the project and its objectives" required></textarea>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5 class="mb-4">Project Locations</h5>
                    <div id="locations-section">
                        <!-- Location Entry Template -->
                        <div class="row location-entry mb-4">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Location Name</label>
                                    <input type="text" name="locations[0][name]" class="form-control" placeholder="Enter location name" required>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label>Latitude</label>
                                    <input type="text" name="locations[0][latitude]" class="form-control" placeholder="Enter latitude" required>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label>Longitude</label>
                                    <input type="text" name="locations[0][longitude]" class="form-control" placeholder="Enter longitude" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Location Description</label>
                                    <textarea name="locations[0][description]" class="form-control" rows="2" placeholder="Describe this location" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" id="add-location-btn">Add Another Location</button>
                    </div>

                    <hr>
                    <h5 class="mb-4">Number of Expected Workers</h5>
                    <div class="row">
                        <!-- Worker Fields -->
                        <div class="col-lg-3 col-sm-6">
                            <div class="form-group">
                                <label>Professionals</label>
                                <input type="number" name="workers[professionals]" class="form-control" placeholder="Enter number" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6">
                            <div class="form-group">
                                <label>Skilled</label>
                                <input type="number" name="workers[skilled]" class="form-control" placeholder="Enter number" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6">
                            <div class="form-group">
                                <label>Semi-Skilled</label>
                                <input type="number" name="workers[semiSkilled]" class="form-control" placeholder="Enter number" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6">
                            <div class="form-group">
                                <label>Unskilled</label>
                                <input type="number" name="workers[unskilled]" class="form-control" placeholder="Enter number" required>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <h5 class="mb-4">Supporting Documents</h5>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6><strong>Corporate Profile:</strong></h6>
                                <p>Detailed company profile.</p>
                                <input name="CFEdoc" type="file" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6><strong>Risk management plan</strong></h6>
                                <p>analysis of project risk and mitigation strategies</p>
                                <input name="pastExperienceRefDoc" type="file" class="form-control" required>
                            </div>
                        </div>

                        <hr>
                       
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6><strong>Audited Financial Statements</strong></h6>
                                <p>Audited financial statements covering a period of six months.</p>
                                <input name="CFCdoc" type="file" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6><strong>Standard operating procedures (SOPs):</strong>
                                    </h6>
                                    <p>Specific procedures followed for key engineering operations</p>
                                <input name="taxComplianceDoc" type="file" class="form-control" required>
                            </div>
                        </div>

                        <hr>

                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <h6><strong>Projected Price Structure and Delivery Schedule: </strong>
                                    </h6>
                                    <p>Detailed projection of pricing and the planned delivery timeline.</p>
                                <input name="proofOfAdherenceDoc" type="file" class="form-control" required>
                            </div>
                        </div>
