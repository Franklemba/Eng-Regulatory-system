                    </div>

            
                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">Submit Project</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let locationCount = 0;
    document.getElementById('add-location-btn').addEventListener('click', function () {
        locationCount++;
        const locationEntry = document.querySelector('.location-entry').cloneNode(true);

        // Update the name attributes for the new location
        locationEntry.querySelectorAll('input, textarea').forEach(input => {
            if (input.name) {
                input.name = input.name.replace('[0]', `[${locationCount}]`);
            }
        });

        document.getElementById('locations-section').appendChild(locationEntry);
    });
</script>
















