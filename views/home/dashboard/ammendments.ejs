<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Licence Amendment Application</h4>
                <h6>Request an amendment to an existing licence</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form>
                    <div class="row">
                        <!-- Licence Information -->
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Licence ID</label>
                                <input type="text" class="form-control" placeholder="Enter Licence ID">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Business Name</label>
                                <input type="text" class="form-control" placeholder="Enter Business Name">
                            </div>
                        </div>

                        <!-- Amendment Details -->
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label>Type of Amendment</label>
                                <textarea class="form-control" placeholder="Explain the required amendment"></textarea>
                            </div>
                        </div>

                        <!-- Contact Details -->
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Contact Person</label>
                                <input type="text" class="form-control" placeholder="Enter Contact Person's Name">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Email Address</label>
                                <input type="email" class="form-control" placeholder="Enter Email Address">
                            </div>
                        </div>

                        <!-- Supporting Documents -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Upload Supporting Documents</label>
                                <div class="image-upload">
                                    <input type="file" multiple>
                                    <div class="image-uploads">
                                        <img src="/assets/img/icons/upload.svg" alt="img">
                                        <h4>Drag and drop files to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary">Submit Amendment Request</button>
                            <button type="reset" class="btn btn-secondary">Clear Form</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
