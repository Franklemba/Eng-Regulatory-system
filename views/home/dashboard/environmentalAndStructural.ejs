<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Environmental and Structural Safety Assessment</h4>
                <h6>Submit an assessment for environmental and structural safety compliance</h6>
            </div>
        </div>
        <%- include(`../../partials/notification`) %>
        <div class="card">
            <div class="card-body">
                <form method="post" action="/dashboard/newEnvironmentAndStructuralLicence"  enctype="multipart/form-data">
                    <div class="row">
                        <!-- Project/Business Information -->
                        <!-- <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Project/Business Name</label>
                                <input type="text" class="form-control" name="projectName" placeholder="Enter Project/Business Name">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Project ID</label>
                                <input type="text" name="projectID" class="form-control" placeholder="Enter Project ID">
                            </div>
                        </div> -->

                        <!-- Environmental Safety Information -->
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Environmental Impact Assessment (EIA) Required?</label>
                                <select name="isEIArequired" class="form-control">
                                    <option>Choose an option</option>
                                    <option>Yes</option>
                                    <option>No</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Impact on Local Ecosystem</label>
                                <textarea name="localEcosystemImpactDescription" class="form-control" placeholder="Describe the expected environmental impact"></textarea>
                            </div>
                        </div>

                        <!-- Structural Safety Information -->
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Structural Safety Standards Followed</label>
                                <select name="structuralSafetyStandards" class="form-control">
                                    <option>Choose a standard</option>
                                    <option>ISO 9001</option>
                                    <option>BS 8110</option>
                                    <option>EN 1990</option>
                                    <option>Others</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Type of Structure</label>
                                <select name="structureType" class="form-control">
                                    <option>Choose a structure type</option>
                                    <option>Building</option>
                                    <option>Bridge</option>
                                    <option>Dam</option>
                                    <option>Road</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- Safety Evaluation -->
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Structural Integrity Evaluation Report</label>
                                <input name="structuralIntegrityEvaluationReport" type="file" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Environmental Impact Mitigation Plan</label>
                                <input name="environmentImpactMitigationPlan" type="file" class="form-control">
                            </div>
                        </div>

                        <!-- Environmental Safety Factors -->
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label>Risk Assessment for Environmental Safety</label>
                                <textarea name="environmentalAssessDetails" class="form-control" placeholder="Provide a detailed risk assessment of the environmental impact"></textarea>
                            </div>
                        </div>

                        <!-- Structural Safety Factors -->
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label>Risk Assessment for Structural Safety</label>
                                <textarea name="structuralSafetyDetails" class="form-control" placeholder="Provide a detailed risk assessment of structural safety"></textarea>
                            </div>
                        </div>

                        <!-- Emergency Response Plan -->
                        <div class="col-lg-12 col-12">
                            <div class="form-group">
                                <label>Emergency Response Plan</label>
                                <textarea name="emergencyResponsePlan" class="form-control" placeholder="Provide the emergency response plan for the project"></textarea>
                            </div>
                        </div>

                        <!-- Supporting Documents -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Written approval from Zambia Environmental Management Agency</label>
                                <div class="image-upload">
                                    <input name="supportingDocument" type="file" multiple>
                                    <div class="image-uploads">
                                        <img src="/assets/img/icons/upload.svg" alt="img">
                                        <h4>Drag and drop files to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary">Submit Environmental & Structural Safety Assessment</button>
                            <button type="reset" class="btn btn-secondary">Clear Form</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
